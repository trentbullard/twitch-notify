{
  "manifest_version": 3,
  "name": "Twitch Notify",
  "version": "1.0",
  "description": "List the active streams of the channels you follow on Twitch and notify you when they go live.",
  "icons": {
    "16": "icon-16.png",
    "32": "icon-32.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "content_scripts": [
    {
      "js": ["scripts/content.js"],
      "matches": ["https://www.twitch.tv/*"]
    }
  ]
}
